{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* JavaScript support */
        "allowJs": true, // Cho phép TypeScript xử lý file .js
        "checkJs": false, // Không kiểm tra kiểu cho file .js
        "esModuleInterop": true
    },
    "include": [
        "vite.config.ts",
        "src/**/*.ts",
        "src/**/*.js" // Bao gồm cả file .js trong thư mục src
    ]
}
